{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0",
    "title": "SMS API"
  },
  "paths": {
    "/customers": {
      "get": {
        "operationId": "customers",
        "x-mojo-name": "get_customers",
        "x-mojo-to": "customer#list",
        "summary": "List all registered customers",
        "responses": {
          "200": {
            "description": "Customers response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "customers": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/customer": {
      "get": {
        "operationId": "customer",
        "x-mojo-name": "get_customer",
        "x-mojo-to": "customer#index",
        "summary": "Show a registered customer",
        "responses": {
          "200": {
            "description": "Customer response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/message": {
      "post": {
        "operationId": "create_message",
        "x-mojo-name": "post_message",
        "x-mojo-to": "message#create",
        "summary": "Create sms messages for a customer",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Messages response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "operationId": "message",
        "x-mojo-name": "get_message",
        "x-mojo-to": "message#index",
        "summary": "List all sms messages from a customer",
        "parameters": [
          {
            "in": "query",
            "name": "name",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Messages response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "item": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {      
        "type": "apiKey",
        "in": "header",       
        "name": "X-API-KEY"
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "API key is missing or invalid",
        "headers": {
          "WWW_Authenticate": {
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ]  
}